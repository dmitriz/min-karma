{
  "name": "min-karma",
  "description": "Minimal karma runner setup",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitriz/min-karma"
  },
  "author": {
    "name": "Dmitri Zaitsev",
    "email": "dmitri14@gmail.com",
    "url": "https://github.com/dmitriz"
  },
  "scripts": {
    "start": "karma start",
    "pub": "npm version patch && npm publish && git push",
    "sync": "git ac && git pull --rebase && git push",
    "postinstall": "node index.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "karma.conf.js",
    "demo"
  ],
  "keywords": [
    "karma",
    "jasmine",
    "testing",
    "test",
    "runner"
  ],
  "dependencies": {
    "gently-copy": "^1.1.5",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^1.0.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^1.1.5",
    "karma-firefox-launcher": "^0.1.7",
    "semantic-release": "^4.3.5"
  },
  "standard": {
    "globals": [
      "describe",
      "expect",
      "it",
      "beforeEach",
      "angular",
      "document"
    ]
  },
  "bugs": {
    "url": "https://github.com/dmitriz/min-karma/issues"
  },
  "homepage": "https://github.com/dmitriz/min-karma#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}