{
  "version": "3.0.0",
  "name": "min-karma",
  "description": "Minimal Karma Runner setup",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitriz/min-karma"
  },
  "author": {
    "name": "Dmitri Zaitsev",
    "email": "dmitri14@gmail.com",
